Consents: {{user.policies.length}}<br/>
{{#each (await user.policies) as |consent index|}}
  {{index}}: {{consent.id}} <br/>
{{/each}}
<ul>
{{#each policies as |policy|}}
  <li>
    <span>Data: {{policy.dataCollection}}</span><br/>
    <span>Location: {{policy.locationCollection}}</span><br/>
    <span>Process: {{policy.processCollection}}</span><br/>
    <span>Purpose: {{policy.purposeCollection}}</span><br/>
    <span>Recipient: {{policy.recipientCollection}}</span><br/>
    {{input type="checkbox" checked=(array-includes-item array=(await user.policies) item=policy) change=(action "insertOrRemovePolicy" user.policies policy)}}<br/><br/>
  </li>
{{else}}
  <li>No consents to show.</li>
{{/each}}
</ul>

<button {{action "save"}}>Save new policies</button>
{{outlet}}
