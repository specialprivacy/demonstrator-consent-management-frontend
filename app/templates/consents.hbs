{{#paper-content class="md-whiteframe-z1 list-demo consent-list" }}
  {{#paper-list}}
    {{#each policies as |policy|}}
      {{#paper-item class="md-3-line consent-item" }}
        <div class="md-list-item-text">
          <div class="consent-item_textblock">
            <div class="consent-item_textblock--title">Data: </div>
            <div class="consent-item_textblock--text">{{policy.dataCollection}}</div>
          </div>
          <div class="consent-item_textblock">
            <div class="consent-item_textblock--title">Location: </div>
            <div class="consent-item_textblock--text">{{policy.locationCollection}}</div>
          </div>
          <div class="consent-item_textblock">
            <div class="consent-item_textblock--title">Process: </div>
            <div class="consent-item_textblock--text">{{policy.processCollection}}</div>
          </div>
          <div class="consent-item_textblock">
            <div class="consent-item_textblock--title">Purpose: </div>
            <div class="consent-item_textblock--text">{{policy.purposeCollection}}</div>
          </div>
          <div class="consent-item_textblock">
            <div class="consent-item_textblock--title">Recipient: </div>
            <div class="consent-item_textblock--text">{{policy.recipientCollection}}</div>
          </div>

          {{input type="checkbox" checked=(array-includes-item array=(await user.policies) item=policy) change=(action "insertOrRemovePolicy" user.policies policy)}}
        </div>
      {{/paper-item}}
      {{paper-divider}}
      {{else}}
        {{#paper-item class="md-3-line" }}
          <div class="md-list-item-text">
            <div class="consent-item_textblock">
              <div class="consent-item_textblock--text">No consents to show.</div>
            </div>
          </div>
        {{/paper-item}}
        {{paper-divider}}
    {{/each}}
  {{/paper-list}}
{{/paper-content}}

<button {{action "save"}}>Save new policies</button> {{outlet}}
